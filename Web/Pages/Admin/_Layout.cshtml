<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>管理后台</title>

	<!-- Tell the browser to be responsive to screen width -->
	<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
	<!-- Bootstrap 3.3.7 -->
	<link rel="stylesheet" href="@(Config.g_adminroot)JS/bootstrap/css/bootstrap.min.css">
	<!-- Theme style -->
	<link rel="stylesheet" href="@(Config.g_adminroot)JS/AdminLTE/css/AdminLTE.min.css">
	<!-- AdminLTE Skins. Choose a skin from the css/skins
		 folder instead of downloading all of them to reduce the load. -->
	<link rel="stylesheet" href="@(Config.g_adminroot)JS/AdminLTE/css/skins/_all-skins.min.css">
	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
		<script src="@(Config.g_adminroot)JS/html5shiv.min.js"></script>
		<script src="@(Config.g_adminroot)JS/respond.min.js"></script>
	<![endif]-->
	<!-- Font Awesome -->
	<link rel="stylesheet" href="@(Config.g_adminroot)JS/font-awesome/css/font-awesome.min.css">

	<!-- jQuery 3 -->
	<script src="@(Config.g_adminroot)JS/jquery.min.js"></script>
	<!-- SlimScroll -->
	<script src="@(Config.g_adminroot)JS/jquery-slimscroll/jquery.slimscroll.min.js"></script>
	<!-- Bootstrap 3.3.7 -->
	<script src="@(Config.g_adminroot)JS/bootstrap/js/bootstrap.min.js"></script>
	<!-- AdminLTE App -->
	<script src="@(Config.g_adminroot)JS/AdminLTE/js/adminlte.min.js"></script>
	<!-- 引入 Vue.js -->
	<script src="@(Config.g_adminroot)JS/vue.js"></script>

	<link href="@(Config.g_adminroot)CSS/Config.css" rel="stylesheet" />
	<script src="@(Config.g_adminroot)JS/Config.js"></script>
</head>
<body class="hold-transition skin-blue fixed sidebar-mini">
<div class="wrapper">
	<header class="main-header" id="main-header">
		<!-- Logo -->
		<a href="index2.html" class="logo">
			<!-- mini logo for sidebar mini 50x50 pixels -->
			<span class="logo-mini"><b>P</b>A</span>
			<!-- logo for regular state and mobile devices -->
			<span class="logo-lg"><b>Panda</b>Admin</span>
		</a>
		<!-- Header Navbar: style can be found in header.less -->
		<nav class="navbar navbar-static-top">
			<!-- Sidebar toggle button-->
			<a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
				<span class="sr-only">Toggle navigation</span>
			</a>
			<div class="navbar-custom-menu">
				<ul class="nav navbar-nav">
					<!-- Messages: style can be found in dropdown.less-->
					<li class="dropdown messages-menu">
						<a href="#" class="dropdown-toggle">
							<i class="fa fa-envelope-o"></i>
							<span class="label bg-red">5</span>
						</a>
					</li>
					<li class="dropdown messages-menu">
						<a href="@(Config.g_adminroot)unlogin" class="dropdown-toggle">
							<i class="fa fa-sign-out"></i>
						</a>
					</li>
				</ul>
			</div>
		</nav>
	</header>
	<!-- Left side column. contains the logo and sidebar -->
	<aside class="main-sidebar">
		<!-- sidebar: style can be found in sidebar.less -->
		<section class="sidebar">
			<!-- Sidebar user panel -->
			<div class="user-panel">
				<div class="pull-left image">
					<img src="@(Config.g_adminroot)Images/user2-160x160.jpg" class="img-circle" alt="User Image">
				</div>
				<div class="pull-left info">
					<p>Panda</p>
					<a href="#"><i class="fa fa-circle text-success"></i> Online</a>
				</div>
			</div>
			<!-- sidebar menu: : style can be found in sidebar.less -->
			<ul class="sidebar-menu" data-widget="tree" data-accordion="0">
				<li class="treeview active">
					<a href="#">
						<i class="fa fa-files-o"></i>
						<span>信息管理</span>
						<span class="pull-right-container">
							<i class="fa fa-angle-left pull-right"></i>
						</span>
					</a>
					<ul class="treeview-menu">
						<li><a href="@(Config.g_adminroot)news/newstypelist"><i class="fa fa-circle-o"></i> 分类列表</a></li>
						<li><a href="@(Config.g_adminroot)news/newslist"><i class="fa fa-circle-o"></i> 信息列表</a></li>
					</ul>
				</li>
				<li>
					<a href="pages/mailbox/mailbox.html">
						<i class="fa fa-envelope"></i> <span>留言</span>
						<span class="pull-right-container">
							<small class="label pull-right bg-red">5</small>
						</span>
					</a>
				</li>
				<li class="header">颜色</li>
				<li><a href="#"><i class="fa fa-circle-o text-red"></i> <span>重要</span></a></li>
				<li><a href="#"><i class="fa fa-circle-o text-yellow"></i> <span>错误</span></a></li>
				<li><a href="#"><i class="fa fa-circle-o text-aqua"></i> <span>消息</span></a></li>
			</ul>
		</section>
		<!-- /.sidebar -->
	</aside>
	<!-- Content Wrapper. Contains page content -->
	<div class="content-wrapper" id="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header" id="content-header">
			<h1>
				@ViewData["Title"]
			</h1>
			<ol class="breadcrumb">
				<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
				<li class="active">@ViewData["Title"]</li>
			</ol>
		</section>
		<!-- Main content -->
		<section class="content">
			@RenderBody()
			@Html.AntiForgeryToken()
		</section>
		<script>
			//设置内容区域自适应
			$(window).resize(function ()
			{
				setAppAdaptive();
			});
			$(window).load(function ()
			{
				setAppAdaptive();
			});
			function setAppAdaptive()
			{
				//alert($("#content-wrapper").innerHeight())
				$("#app").css("height", $(window).height() - ($(window).width() < 768 ? 100 : 50) - $("#content-header").outerHeight() - 30)
			}
		</script>
		<!-- /.content -->
	</div>
</div>
<!-- ./wrapper -->
</body>
</html>
