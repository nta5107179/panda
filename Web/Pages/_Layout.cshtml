<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>

	<meta name="keywords" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0;" />
	<!--强制使用webkit内核-->
	<!--360 6.X 以上可识别-->
	<meta name="renderer" content="webkit">
	<!--其他双核可识别-->
	<meta name="force-rendering" content="webkit">
	<!--对于没有自带 IE7 内核的浏览器 强制使用用户已安装的最高版本浏览器渲染, 有Chrome框架的优先使用-->
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<!-- 引入 Bootstrap -->
	<link href="@(Config.g_root)JS/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
	<!-- HTML5 Shim 和 Respond.js 用于让 IE8 支持 HTML5元素和媒体查询 -->
	<!-- 注意： 如果通过 file://  引入 Respond.js 文件，则该文件无法起效果 -->
	<!--[if lt IE 9]>
		<script src="@(Config.g_root)JS/html5shiv.min.js"></script>
		<script src="@(Config.g_root)JS/respond.min.js"></script>
	<![endif]-->
	<!-- jQuery (Bootstrap 的 JavaScript 插件需要引入 jQuery) -->
	<script src="@(Config.g_root)JS/jquery.min.js"></script>
	<!-- 包括所有已编译的插件 -->
	<script src="@(Config.g_root)JS/bootstrap/js/bootstrap.min.js"></script>

	<link href="@(Config.g_root)CSS/Config.css" rel="stylesheet" />
	<script src="@(Config.g_root)JS/Config.js"></script>

</head>
<body>
	<div class="_top">
		<div class="row">
			<nav class="navbar navbar-inverse _nav">
				<div class="container">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
					</div>
					<div class="navbar-collapse collapse">
						<ul class="nav navbar-nav">
							<li><a href="/index">首页</a></li>
							<li><a href="/skillshare/index">技术分享</a></li>
							<li><a href="#experience">个人经历</a></li>
							<li><a href="#contact">留言</a></li>
							<li><a href="/travelsmood/index">游记&心情</a></li>
						</ul>
					</div>
				</div>
			</nav>
		</div>
	</div>
	<div class="_middle">
		<div class="row">
			<div class="col-xs-12">
				@Html.AntiForgeryToken()
				@RenderBody()
			</div>
		</div>
	</div>
	<div class="_bottom">
		<div class="container">
			<div class="row">
				<div class="col-sm-6 col-xs-12 _left"><img src="@(Config.g_root)Images/panda_word.png" /></div>
				<div class="col-sm-6 col-xs-12 _right">
					<div>苏ICP备000000000000号</div>
					<div>--静海熊猫</div>
				</div>
			</div>
		</div>
	</div>
	<script>
		function layout_setBottom()
		{
			if ($("._top").outerHeight() + $("._middle").outerHeight() + $("._bottom").outerHeight() < $(window).height())
			{
				$("._bottom").addClass("fixed");
			}
			else
			{
				$("._bottom").removeClass("fixed");
			}
		}
		$(window).resize(function ()
		{
			layout_setBottom();
		});
		$(function ()
		{
			layout_setBottom();
		})
	</script>
</body>
</html>
